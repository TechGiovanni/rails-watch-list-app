<div class="banner__box">
  <%= cl_image_tag("https://res.cloudinary.com/dppymdnxh/image/upload/v1668203187/MovieListApp/vmoqijzbotvhobjrwp4h.jpg", class: 'banner', style: 'background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))')%>
  <div class="banner__box_text">
    <h2 class="index__title"><%= @list.name.capitalize %></h2></div>
    <div class="banner__shadow"></div>
  </div>
</div>



<div class="wrapper">
  <div class="new__container">

    <div class="new__form">
    <p><span data-controller="typed-js"></span></p>
      <h2 class="new__form_title">Choose A Movie To Your List</h2>
      <ul class="form__ul">
          <li class="new__form_show">
            <%= simple_form_for [@list, @bookmark] do |f| %>
              <%= f.association :movie, prompt: 'Select a movie' %>
              <%= f.input :comment, placeholder: "Please enter a comment..." %>
              <%= f.submit 'Add movie', class: 'btn btn-primary' %>
            <% end %>
          </li>
      </ul>
    </div>
    <div>
      <%= link_to list_path(@list) do %>
        <div class="show__back_link">
          <h2 class="show__back_link_text">Go Back to List</h2>
        </div>
      <% end %>
    </div>

  </div>
</div>
